<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="menu.choixsnack"
             BackgroundColor="#FAFAFA"
             Title="Fast food">

    <Grid RowDefinitions="*,Auto">

        <!-- Contenu principal scrollable -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="15" Spacing="20">
                <!-- Première carte -->
                <Frame CornerRadius="20" HasShadow="True" BackgroundColor="White" Padding="0">
                    <VerticalStackLayout>
                        <Frame CornerRadius="15" Padding="0" HasShadow="False" IsClippedToBounds="True" Margin="10">
                            <Image Source="sahbi.jpg" HeightRequest="150" Aspect="AspectFill"/>
                        </Frame>

                        <StackLayout Padding="10">
                            <Label Text="Snack Sa7bi" FontAttributes="Bold" FontSize="20" TextColor="#212121"/>

                            <HorizontalStackLayout Spacing="2">
                                <Label Text="3,8" FontSize="14" TextColor="#757575"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#E0E0E0" FontSize="16"/>
                            </HorizontalStackLayout>

                            <Label Text="1–50 MAD snack" FontAttributes="Bold" FontSize="16" TextColor="#212121"/>

                            <HorizontalStackLayout Spacing="15" Margin="0,10,0,0">
                                <Button Text="Voir" WidthRequest="360"
                        FontSize="16"
                        BackgroundColor="#FF7043"
                        TextColor="White"
                        CornerRadius="12"
                        BorderColor="Transparent"
                        HorizontalOptions="FillAndExpand"
                        Clicked="sah"/>

                                <ImageButton Source="bookmark.png"
                             WidthRequest="28"
                             HeightRequest="28"
                             BackgroundColor="Transparent"/>
                            </HorizontalStackLayout>
                        </StackLayout>
                    </VerticalStackLayout>
                </Frame>



                <!-- deuxieme carte -->
                <Frame CornerRadius="20" HasShadow="True" BackgroundColor="White" Padding="0">
                    <VerticalStackLayout>
                        <Frame CornerRadius="15" Padding="0" HasShadow="False" IsClippedToBounds="True" Margin="10">
                            <Image Source="driif.jpg" HeightRequest="150" Aspect="AspectFill"/>
                        </Frame>

                        <StackLayout Padding="10">
                            <Label Text="Driif Food" FontAttributes="Bold" FontSize="20" TextColor="#212121"/>

                            <HorizontalStackLayout Spacing="2">
                                <Label Text="4,1" FontSize="14" TextColor="#757575"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#E0E0E0" FontSize="16"/>
                            </HorizontalStackLayout>

                            <Label Text="1–50 MAD snack" FontAttributes="Bold" FontSize="16" TextColor="#212121"/>

                            <HorizontalStackLayout Spacing="15" Margin="0,10,0,0">
                                <Button Text="Voir" WidthRequest="360"
           FontSize="16"
           BackgroundColor="#FF7043"
           TextColor="White"
           CornerRadius="12"
           BorderColor="Transparent"
           HorizontalOptions="FillAndExpand"
           Clicked="driif"/>

                                <ImageButton Source="bookmark.png"
                WidthRequest="28"
                HeightRequest="28"
                BackgroundColor="Transparent"/>
                            </HorizontalStackLayout>
                        </StackLayout>
                    </VerticalStackLayout>
                </Frame>






                <Frame CornerRadius="20" HasShadow="True" BackgroundColor="White" Padding="0">
                    <VerticalStackLayout>
                        <Frame CornerRadius="15" Padding="0" HasShadow="False" IsClippedToBounds="True" Margin="10">
                            <Image Source="bigdal.jpg" HeightRequest="150" Aspect="AspectFill"/>
                        </Frame>

                        <StackLayout Padding="10">
                            <Label Text="Big Dal" FontAttributes="Bold" FontSize="20" TextColor="#212121"/>

                            <HorizontalStackLayout Spacing="2">
                                <Label Text="4,8" FontSize="14" TextColor="#757575"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                            </HorizontalStackLayout>

                            <Label Text="1–50 MAD snack" FontAttributes="Bold" FontSize="16" TextColor="#212121"/>

                            <HorizontalStackLayout Spacing="15" Margin="0,10,0,0">
                                <Button Text="Voir" WidthRequest="360"
FontSize="16"
BackgroundColor="#FF7043"
TextColor="White"
CornerRadius="12"
BorderColor="Transparent"
HorizontalOptions="FillAndExpand"
Clicked="big"/>

                                <ImageButton Source="bookmark.png"
     WidthRequest="28"
     HeightRequest="28"
     BackgroundColor="Transparent"/>
                            </HorizontalStackLayout>
                        </StackLayout>
                    </VerticalStackLayout>
                </Frame>





                <Frame CornerRadius="20" HasShadow="True" BackgroundColor="White" Padding="0">
                    <VerticalStackLayout>
                        <Frame CornerRadius="15" Padding="0" HasShadow="False" IsClippedToBounds="True" Margin="10">
                            <Image Source="brimo1.jpg" HeightRequest="150" Aspect="AspectFill"/>
                        </Frame>

                        <StackLayout Padding="10">
                            <Label Text="Brimo Snack" FontAttributes="Bold" FontSize="20" TextColor="#212121"/>

                            <HorizontalStackLayout Spacing="2">
                                <Label Text="3,6" FontSize="14" TextColor="#757575"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="Gray" FontSize="16"/>
                                <Label Text="★" TextColor="Gray" FontSize="16"/>
                            </HorizontalStackLayout>

                            <Label Text="1–100 MAD snack" FontAttributes="Bold" FontSize="16" TextColor="#212121"/>

                            <HorizontalStackLayout Spacing="15" Margin="0,10,0,0">
                                <Button Text="Voir" WidthRequest="360"
FontSize="16"
BackgroundColor="#FF7043"
TextColor="White"
CornerRadius="12"
BorderColor="Transparent"
HorizontalOptions="FillAndExpand"
Clicked="brimo"/>

                                <ImageButton Source="bookmark.png"
     WidthRequest="28"
     HeightRequest="28"
     BackgroundColor="Transparent"/>
                            </HorizontalStackLayout>
                        </StackLayout>
                    </VerticalStackLayout>
                </Frame>










            </VerticalStackLayout>
        </ScrollView>

        <!-- Barre de navigation -->
        <Frame Grid.Row="1"
        CornerRadius="25"
        Padding="0"
        HeightRequest="70"
        HasShadow="True"
        Margin="10">
            <Grid ColumnDefinitions="*,*,*,*,*">
                <ImageButton Source="home.png" Grid.Column="0" WidthRequest="30" HeightRequest="30" HorizontalOptions="End" VerticalOptions="Center" Clicked="home" />

                <Frame Grid.Column="2" WidthRequest="60" HeightRequest="60" CornerRadius="30" VerticalOptions="Center" HorizontalOptions="Center" HasShadow="True">
                    <ImageButton Source="compass.png" Grid.Column="3" WidthRequest="30" HeightRequest="30" HorizontalOptions="Center" VerticalOptions="Center" />
                </Frame>

                <ImageButton Source="profile_user.png" Grid.Column="4" WidthRequest="30" HeightRequest="30" HorizontalOptions="Start" VerticalOptions="Center" />
            </Grid>
        </Frame>
    </Grid>
</ContentPage>
