<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="menu.Pages.SignInView"
            BackgroundColor="Black"
BackgroundImageSource="background1.jpeg">

    <Grid VerticalOptions="CenterAndExpand" Padding="30">
        <VerticalStackLayout Spacing="15" HorizontalOptions="Center">

            <Border StrokeThickness="1"
        Stroke="Gray"
        BackgroundColor="White"
        HorizontalOptions="Center"
        WidthRequest="250"
        HeightRequest="50"
        StrokeShape="RoundRectangle 12">
                <Entry Text="{Binding Email}"
           Placeholder="Email"
           PlaceholderColor="LightGray"
           BackgroundColor="Transparent"
           TextColor="Black"
           VerticalOptions="Center"/>
            </Border>

            <Border StrokeThickness="1"
        Stroke="White"
        BackgroundColor="White"
        HorizontalOptions="Center"
        WidthRequest="250"
        HeightRequest="50"
        StrokeShape="RoundRectangle 12"
        Margin="0,10,0,0">
                <Entry Text="{Binding Password}"
           Placeholder="Mot de Passe"
           IsPassword="True"
           PlaceholderColor="LightGray"
           BackgroundColor="Transparent"
           TextColor="Black"
           VerticalOptions="Center"/>
            </Border>

            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   HorizontalOptions="Center"
                   FontSize="14"/>

            <Button Text="Se connecter"
                    Command="{Binding SignInCommand}"
                    BackgroundColor="#EBA067"
                    TextColor="#FFF9EF"
                    WidthRequest="250"
                    CornerRadius="8"/>

            <!-- Ici la solution clean -->
            <StackLayout HorizontalOptions="Center">
                <Label Text="Besoin d'un compte ? Inscription"
                       TextDecorations="Underline"
                       TextColor="LightBlue"
                       HorizontalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateSignUpTapGesture}" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>

        </VerticalStackLayout>
    </Grid>
</ContentPage>