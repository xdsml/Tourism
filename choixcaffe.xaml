<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="menu.choixcaffe"
             BackgroundColor="#F5F5F5"
             Title="caffes">

    <Grid RowDefinitions="*,Auto">

        <!-- Contenu principal scrollable -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="15" Spacing="20">
                <!-- Première carte -->
                <Frame CornerRadius="20" HasShadow="True" BackgroundColor="White" Padding="0">
                    <VerticalStackLayout>
                        <Frame CornerRadius="15" Padding="0" HasShadow="False" IsClippedToBounds="True" Margin="10">
                            <Image Source="bleu.jpg" HeightRequest="150" Aspect="AspectFill"/>
                        </Frame>

                        <StackLayout Padding="10">
                            <Label Text="Bleu Café: Restaurant Glacier et Pizzeria" FontAttributes="Bold" FontSize="20" TextColor="#212121"/>

                            <HorizontalStackLayout Spacing="2">
                                <Label Text="3,4" FontSize="14" TextColor="#757575"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#E0E0E0" FontSize="16"/>
                            </HorizontalStackLayout>

                            <Label Text="1–50 MAD caffe" FontAttributes="Bold" FontSize="16" TextColor="#212121"/>

                            <HorizontalStackLayout Spacing="15" Margin="0,10,0,0">
                                <Button Text="Voir" WidthRequest="360"
        FontSize="16"
        BackgroundColor="#FF7043"
        TextColor="White"
        CornerRadius="12"
        BorderColor="Transparent"
        HorizontalOptions="FillAndExpand"
        Clicked="bleu"/>

                                <ImageButton Source="bookmark.png"
             WidthRequest="28"
             HeightRequest="28"
             BackgroundColor="Transparent"/>
                            </HorizontalStackLayout>
                        </StackLayout>
                    </VerticalStackLayout>
                </Frame>






                <Frame CornerRadius="20" HasShadow="True" BackgroundColor="White" Padding="0">
                    <VerticalStackLayout>
                        <Frame CornerRadius="15" Padding="0" HasShadow="False" IsClippedToBounds="True" Margin="10">
                            <Image Source="excellence.jpg" HeightRequest="150" Aspect="AspectFill"/>
                        </Frame>

                        <StackLayout Padding="10">
                            <Label Text="L'Excellence Gold" FontAttributes="Bold" FontSize="20" TextColor="#212121"/>

                            <HorizontalStackLayout Spacing="2">
                                <Label Text="3,4" FontSize="14" TextColor="#757575"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#E0E0E0" FontSize="16"/>
                                <Label Text="★" TextColor="#E0E0E0" FontSize="16"/>
                            </HorizontalStackLayout>

                            <Label Text="1–100 MAD Restaurant" FontAttributes="Bold" FontSize="16" TextColor="#212121"/>

                            <HorizontalStackLayout Spacing="15" Margin="0,10,0,0">
                                <Button Text="Voir" WidthRequest="360"
        FontSize="16"
        BackgroundColor="#FF7043"
        TextColor="White"
        CornerRadius="12"
        BorderColor="Transparent"
        HorizontalOptions="FillAndExpand"
        Clicked="excell"/>

                                <ImageButton Source="bookmark.png"
             WidthRequest="28"
             HeightRequest="28"
             BackgroundColor="Transparent"/>
                            </HorizontalStackLayout>
                        </StackLayout>
                    </VerticalStackLayout>
                </Frame>





                <Frame CornerRadius="20" HasShadow="True" BackgroundColor="White" Padding="0">
                    <VerticalStackLayout>
                        <Frame CornerRadius="15" Padding="0" HasShadow="False" IsClippedToBounds="True" Margin="10">
                            <Image Source="eme.jpg" HeightRequest="150" Aspect="AspectFill"/>
                        </Frame>

                        <StackLayout Padding="10">
                            <Label Text="l'Emeraude cafe " FontAttributes="Bold" FontSize="20" TextColor="#212121"/>

                            <HorizontalStackLayout Spacing="2">
                                <Label Text="4,7" FontSize="14" TextColor="#757575"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#E0E0E0" FontSize="16"/>
                            </HorizontalStackLayout>

                            <Label Text="1–50 MAD Restaurant" FontAttributes="Bold" FontSize="16" TextColor="#212121"/>

                            <HorizontalStackLayout Spacing="15" Margin="0,10,0,0">
                                <Button Text="Voir" WidthRequest="360"
FontSize="16"
BackgroundColor="#FF7043"
TextColor="White"
CornerRadius="12"
BorderColor="Transparent"
HorizontalOptions="FillAndExpand"
Clicked="eme"/>

                                <ImageButton Source="bookmark.png"
     WidthRequest="28"
     HeightRequest="28"
     BackgroundColor="Transparent"/>
                            </HorizontalStackLayout>
                        </StackLayout>
                    </VerticalStackLayout>
                </Frame>






                <Frame CornerRadius="20" HasShadow="True" BackgroundColor="White" Padding="0">
                    <VerticalStackLayout>
                        <Frame CornerRadius="15" Padding="0" HasShadow="False" IsClippedToBounds="True" Margin="10">
                            <Image Source="amy.jpg" HeightRequest="150" Aspect="AspectFill"/>
                        </Frame>

                        <StackLayout Padding="10">
                            <Label Text="Amy's Garden " FontAttributes="Bold" FontSize="20" TextColor="#212121"/>

                            <HorizontalStackLayout Spacing="2">
                                <Label Text="3,6" FontSize="14" TextColor="#757575"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#FFC107" FontSize="16"/>
                                <Label Text="★" TextColor="#E0E0E0" FontSize="16"/>
                                <Label Text="★" TextColor="#E0E0E0" FontSize="16"/>
                            </HorizontalStackLayout>

                            <Label Text="1–100 MAD Restaurant" FontAttributes="Bold" FontSize="16" TextColor="#212121"/>

                            <HorizontalStackLayout Spacing="15" Margin="0,10,0,0">
                                <Button Text="Voir" WidthRequest="360"
FontSize="16"
BackgroundColor="#FF7043"
TextColor="White"
CornerRadius="12"
BorderColor="Transparent"
HorizontalOptions="FillAndExpand"
Clicked="amy"/>

                                <ImageButton Source="bookmark.png"
     WidthRequest="28"
     HeightRequest="28"
     BackgroundColor="Transparent"/>
                            </HorizontalStackLayout>
                        </StackLayout>
                    </VerticalStackLayout>
                </Frame>


            </VerticalStackLayout>
        </ScrollView>

        <!-- Barre de navigation -->
        <Frame Grid.Row="1"
       CornerRadius="25"
       Padding="0"
       HeightRequest="70"
       HasShadow="True"
       Margin="10">
            <Grid ColumnDefinitions="*,*,*,*,*">
                <ImageButton Source="home.png" Grid.Column="0" WidthRequest="30" HeightRequest="30" HorizontalOptions="End" VerticalOptions="Center" Clicked="home" />

                <Frame Grid.Column="2" WidthRequest="60" HeightRequest="60" CornerRadius="30" VerticalOptions="Center" HorizontalOptions="Center" HasShadow="True">
                    <ImageButton Source="compass.png" Grid.Column="3" WidthRequest="30" HeightRequest="30" HorizontalOptions="Center" VerticalOptions="Center" Clicked="OnCompassClicked" />
                </Frame>

                <ImageButton Source="profile_user.png" Grid.Column="4" WidthRequest="30" HeightRequest="30" HorizontalOptions="Start" VerticalOptions="Center" Clicked="profil"/>
            </Grid>
        </Frame>

    </Grid>
</ContentPage>
