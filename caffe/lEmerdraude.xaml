<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="menu.lEmerdraude"
             Title="l’Émeraude"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             BackgroundColor="White">

    <Grid RowDefinitions="*, Auto">

        <!-- Image de fond avec overlay sombre -->
        <AbsoluteLayout>
            <Image Source="jam3.jpg"
                   Aspect="AspectFill"
                   AbsoluteLayout.LayoutBounds="0,0,1,1"
                   AbsoluteLayout.LayoutFlags="All" />
            <BoxView BackgroundColor="Black"
                     Opacity="0.4"
                     AbsoluteLayout.LayoutBounds="0,0,1,1"
                     AbsoluteLayout.LayoutFlags="All" />
        </AbsoluteLayout>

        <!-- Contenu défilant -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="15" Padding="15" BackgroundColor="White" Margin="10">

                <!-- Carousel d’images -->
                <Grid>
                    <CarouselView ItemsSource="{Binding Images}" HeightRequest="200">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding}" Aspect="AspectFill" />
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                    <IndicatorView IndicatorColor="LightGray"
                                   SelectedIndicatorColor="DarkGray"
                                   ItemsSource="{Binding Images}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="End"
                                   Margin="0,0,0,10" />
                </Grid>

                <!-- Informations principales -->
                <Label Text="l’Émeraude"
                       FontSize="20"
                       TextColor="Black"
                       FontAttributes="Bold" />

                <Label Text="Café · 1–50 MAD 50-100 MAD 100-150 MAD"
                       FontSize="14"
                       TextColor="Gray" />

                <Label Text="Je recommande vivement"
                       FontSize="14"
                       TextColor="Black"
                       FontAttributes="Italic" />

                <!-- Étoiles -->
                <HorizontalStackLayout Spacing="2">
                    <Label Text="4,7" TextColor="Black" FontSize="20" />
                    <Label Text="★" TextColor="Gold" FontSize="20" />
                    <Label Text="★" TextColor="Gold" FontSize="20" />
                    <Label Text="★" TextColor="Gold" FontSize="20" />
                    <Label Text="★" TextColor="Gold" FontSize="20" />
                    <Label Text="★" TextColor="LightGray" FontSize="20" />
                </HorizontalStackLayout>

                <!-- Commentaire client -->

                <!-- Détails du service -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Adresse : 62 Blvd Prince Heritier Moulay El Hassan, Oujda 60000" FontSize="14" TextColor="Black" />
                    <Label Text="Téléphone : 0661-994960" FontSize="14" TextColor="Black" />
                    <Label Text="Horaires : 
mardi	07:00–23:00
mercredi	07:00–23:00
jeudi
(Fête du travail)
07:00–23:00
Les horaires peuvent être modifiés.
vendredi	07:00–23:00
samedi	07:00–23:00
dimanche	07:00–23:00
lundi	07:00–23:00
" FontSize="14" TextColor="Black" />

                </VerticalStackLayout>

                <!-- Plats recommandés -->
                <Label Text="Avis"
                       FontSize="14"
                       TextColor="Black"
                       FontAttributes="Bold"
                       Padding="5,10" />

                <Label Text="I had a lovely breakfast at Café L’Émeraude The food was fresh and delicious, with a great variety to choose from. The toast was delicious, the coffee was rich, and everything was served quickly. But it took them quite a while to take our orders. All in all the staff were warm and welcoming, and the cozy ambiance made it the perfect start to my day. I’ll definitely be back for more."
       FontSize="14"
       TextColor="Black"
       FontAttributes="Bold"
       Padding="5,10" />
                <Label Text="Un endroit magnifique avec une décoration soignée et élégante qui crée une ambiance chaleureuse. Le service est professionnel, avec un personnel accueillant et attentif. La mood de l’endroit est parfaite pour savourer un bon repas dans une atmosphère agréable. Je recommande vivement cet espace pour son cadre exceptionnel et la qualité de ses prestations "
FontSize="14"
TextColor="Black"
FontAttributes="Bold"
Padding="5,10" />

                <!-- Carte dynamique -->
                <Frame CornerRadius="20"
Padding="0"
HasShadow="True"
BorderColor="#ddd"
BackgroundColor="White"
Margin="20,10"
HorizontalOptions="Center">
                    <ImageButton Source="localemeraude.png"
          Aspect="AspectFill"
          HeightRequest="220"
          WidthRequest="360"
          BackgroundColor="Transparent"
          CornerRadius="20"
          Clicked="OpenGoogleMaps" />
                </Frame>


            </VerticalStackLayout>
        </ScrollView>

        <!-- Barre de navigation fixe en bas -->
        <Frame Grid.Row="1"
CornerRadius="25"
Padding="0"
HeightRequest="70"
HasShadow="True"
Margin="10">
            <Grid ColumnDefinitions="*,*,*,*,*">
                <ImageButton Source="home.png" Grid.Column="0" WidthRequest="30" HeightRequest="30" HorizontalOptions="End" VerticalOptions="Center" Clicked="home" />

                <Frame Grid.Column="2" WidthRequest="60" HeightRequest="60" CornerRadius="30" VerticalOptions="Center" HorizontalOptions="Center" HasShadow="True">
                    <ImageButton Source="compass.png" Grid.Column="3" WidthRequest="30" HeightRequest="30" HorizontalOptions="Center" VerticalOptions="Center" Clicked="OnCompassClicked" />
                </Frame>

                <ImageButton Source="profile_user.png" Grid.Column="4" WidthRequest="30" HeightRequest="30" HorizontalOptions="Start" VerticalOptions="Center" Clicked="profil"/>
            </Grid>
        </Frame>

    </Grid>
</ContentPage>
