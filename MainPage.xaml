<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="menu.MainPage"
             Title="Accueil"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="*,Auto">
        
        

        <!-- Contenu principal -->
        <Grid Row="0">
            <!-- Image de fond -->
           

            
              
            <!-- Grille de contenu -->
            <Grid RowDefinitions="Auto, Auto, *">

                <!-- Barre supérieure -->
                

                <!-- Barre de recherche -->
                

                <!-- Suggestions de recherche -->
                

                <!-- Grille centrale -->
                <Grid Grid.Row="2" ColumnDefinitions="*,*" RowDefinitions="*,*,*">
                    <!-- Cartes comme Monuments, Hotels, Restaurants, etc. -->
                    <!-- (Rien n'a été modifié ici) -->
                    <StackLayout Grid.Row="0" Grid.Column="0"
             Margin="30"
             Spacing="10"
             VerticalOptions="Center"
             HorizontalOptions="Center">

                        <Image Source="mosqueee.png"
           WidthRequest="100"
           HeightRequest="100"
           Aspect="AspectFit"
           BackgroundColor="Transparent">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="monu" />
                            </Image.GestureRecognizers>
                        </Image>

                        <Label Text="Monuments"
           FontSize="18"
           FontAttributes="Bold"
           TextColor="Black"
           HorizontalOptions="Center" />
                    </StackLayout>


                    <StackLayout Grid.Row="0" Grid.Column="1"
             Margin="30"
             Spacing="10"
             VerticalOptions="Center"
             HorizontalOptions="Center">

                        <Image Source="hotele.png"
           WidthRequest="100"
           HeightRequest="100"
           Aspect="AspectFit"
           BackgroundColor="Transparent">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="hotel" />
                            </Image.GestureRecognizers>
                        </Image>

                        <Label Text="Hotels"
           FontSize="18"
           FontAttributes="Bold"
           TextColor="Black"
           HorizontalOptions="Center" />
                    </StackLayout>


                    <StackLayout Grid.Row="1" Grid.Column="0"
             Margin="30"
             Spacing="10"
             VerticalOptions="Center"
             HorizontalOptions="Center">

                        <Image Source="restoo.png"
           WidthRequest="100"
           HeightRequest="100"
           Aspect="AspectFit"
           BackgroundColor="Transparent">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="restau" />
                            </Image.GestureRecognizers>
                        </Image>

                        <Label Text="Restaurants"
           FontSize="18"
           FontAttributes="Bold"
           TextColor="Black"
           HorizontalOptions="Center" />
                    </StackLayout>


                    <StackLayout Grid.Row="1" Grid.Column="1"
             Margin="30"
             Spacing="10"
             VerticalOptions="Center"
             HorizontalOptions="Center">

                        <Image Source="livee.png"
           WidthRequest="100"
           HeightRequest="100"
           Aspect="AspectFit"
           BackgroundColor="Transparent">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="match" />
                            </Image.GestureRecognizers>
                        </Image>

                        <Label Text="Matches"
           FontSize="18"
           FontAttributes="Bold"
           TextColor="Black"
           HorizontalOptions="Center" />
                    </StackLayout>


                    <StackLayout Grid.Row="2" Grid.Column="0"
             Margin="30"
             Spacing="10"
             VerticalOptions="Center"
             HorizontalOptions="Center">

                        <Image Source="scann.png"
           WidthRequest="100"
           HeightRequest="100"
           Aspect="AspectFit"
           BackgroundColor="Transparent">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnScanTapped" />
                            </Image.GestureRecognizers>
                        </Image>

                        <Label Text="QR Score"
           FontSize="18"
           FontAttributes="Bold"
           TextColor="Black"
           HorizontalOptions="Center" />
                    </StackLayout>




                    <StackLayout Grid.Row="2" Grid.Column="1"
             Margin="30"
             Spacing="10"
             VerticalOptions="Center"
             HorizontalOptions="Center">

                        <Image Source="supportox.png"
       WidthRequest="100"
       HeightRequest="100"
       Aspect="AspectFit"
       BackgroundColor="Transparent">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Onsupporttapped" />
                            </Image.GestureRecognizers>
                        </Image>

                        <Label Text="Support"
           FontSize="18"
           FontAttributes="Bold"
           TextColor="Black"
           HorizontalOptions="Center" />
                    </StackLayout>

                </Grid>
            </Grid>
        </Grid>

        <!-- Barre de navigation inférieure -->
        <Frame Grid.Row="1"
               BackgroundColor="White"
               CornerRadius="25"
               Padding="0"
               HeightRequest="70"
               HasShadow="True"
               Margin="10">
            <Grid ColumnDefinitions="*,*,*,*,*">

                <ImageButton Source="home.png"
                             Grid.Column="0"
                             WidthRequest="30"
                             HeightRequest="30"
                             BackgroundColor="Transparent"
                             HorizontalOptions="End"
                             VerticalOptions="Center" />

               

                <Frame Grid.Column="2"
                       WidthRequest="60"
                       HeightRequest="60"
                       CornerRadius="30"
                       BackgroundColor="White"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       HasShadow="True">
                    <ImageButton Source="compass.png"
             Grid.Column="2"
             WidthRequest="30"
             HeightRequest="30"
             BackgroundColor="Transparent"
             HorizontalOptions="Center"
             VerticalOptions="Center"
             Clicked="OnCompassClicked" />


                </Frame>

               

                <ImageButton Clicked="profil"
                             Source="profile_user.png"
                             Grid.Column="4"
                             WidthRequest="30"
                             HeightRequest="30"
                             BackgroundColor="Transparent"
                             HorizontalOptions="Start"
                             VerticalOptions="Center" />
            </Grid>
        </Frame>

    </Grid>
</ContentPage>
