<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             x:Class="menu.Qr.Qrscore"
             Title="Qr Scanner">

    <Grid RowDefinitions="*,Auto">
        <!-- ðŸ‘ˆ Divise l'Ã©cran : partie haute + bas -->

        <!-- Scanner QR cachÃ© au dÃ©but -->
        <zxing:CameraBarcodeReaderView x:Name="barcodeReader"
                                       BarcodesDetected="barcodeReader_BarcodesDetected"
                                       IsDetecting="True"
                                       IsVisible="False"
                                       HorizontalOptions="FillAndExpand"
                                       VerticalOptions="FillAndExpand"
                                       Grid.RowSpan="2" />
        <!-- ðŸ‘ˆ Scanner couvre tout -->

        <!-- Stack central (scan + dÃ©crÃ©mentation) -->
        <StackLayout Grid.Row="0"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Spacing="30">

            <!-- Bouton scan principal -->
            <ImageButton x:Name="qrIcon"
                         Source="scan.png"
                         Clicked="OnQrIconTapped"
                         WidthRequest="150"
                         HeightRequest="150"
                         BackgroundColor="Transparent" />

            <!-- Bouton dÃ©crÃ©mentation -->
            <ImageButton x:Name="decrementBtn"
                         Source="scanner_icon.png"
                         Clicked="OnDecrementTapped"
                         WidthRequest="150"
                         HeightRequest="150"
                         BackgroundColor="Transparent" />

        </StackLayout>

        <!-- Bouton Fermer tout en bas -->
        <ImageButton x:Name="closeScannerBtn"
                     Grid.Row="1"
                     Source="fermer.png"
                     Clicked="OnCloseScannerClicked"
                     WidthRequest="50"
                     HeightRequest="50"
                     BackgroundColor="Transparent"
                     IsVisible="False"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Margin="0,20" />
        <!-- petit espace du bas -->

    </Grid>
</ContentPage>
