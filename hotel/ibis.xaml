<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="menu.ibis"
             Title=" ibis oujda"
             BackgroundColor="White">

    <Grid RowDefinitions="*, Auto">

        <!-- Image de fond avec overlay sombre -->
        <AbsoluteLayout>
            <Image Source="jam3.jpg"
                   Aspect="AspectFill"
                   AbsoluteLayout.LayoutBounds="0,0,1,1"
                   AbsoluteLayout.LayoutFlags="All" />
            <BoxView BackgroundColor="Black"
                     Opacity="0.4"
                     AbsoluteLayout.LayoutBounds="0,0,1,1"
                     AbsoluteLayout.LayoutFlags="All" />
        </AbsoluteLayout>

        <!-- Contenu défilant -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="15" Padding="15" BackgroundColor="White" Margin="10">

                <!-- Carousel d’images -->
                <Grid>
                    <CarouselView ItemsSource="{Binding Images}" HeightRequest="200">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding}" Aspect="AspectFill" />
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                    <IndicatorView IndicatorColor="LightGray"
                                   SelectedIndicatorColor="DarkGray"
                                   ItemsSource="{Binding Images}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="End"
                                   Margin="0,0,0,10" />
                </Grid>

                <!-- Informations principales -->
                <Label Text="ibis Oujda"
                       FontSize="20"
                       TextColor="Black"
                       FontAttributes="Bold" />

                <Label Text="Hôtel 3 étoiles"
                       FontSize="14"
                       TextColor="Gray" />

                <Label Text="Je recommande vivement"
                       FontSize="14"
                       TextColor="Black"
                       FontAttributes="Italic" />

                <!-- Étoiles -->
                <HorizontalStackLayout Spacing="2">
                    <Label Text="4,1" TextColor="Black" FontSize="20" />
                    <Label Text="★" TextColor="Gold" FontSize="20" />
                    <Label Text="★" TextColor="Gold" FontSize="20" />
                    <Label Text="★" TextColor="Gold" FontSize="20" />
                    <Label Text="★" TextColor="Gold" FontSize="20" />
                    <Label Text="★" TextColor="LightGray" FontSize="20" />
                </HorizontalStackLayout>

                <!-- Commentaire client -->


                <!-- Détails du service -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Adresse : Place De La Gare Oncf, Boulevard Abdallah Chefchaouni, Oujda 60000" FontSize="14" TextColor="Black" />
                    <Label Text="📞 05366-88202." FontSize="14" TextColor="Black" />
                    <Label Text="Situé à 5 minutes à pied de la gare d'Oujda, cet hôtel à l'atmosphère décontractée se trouve à 1 km du parc Lalla Meriem et à 2 km de la place animée Bab Sidi Abdel Wahab.

Les chambres sobres disposent du Wi-Fi gratuit, d'une télévision à écran plat, d'un bureau et d'un coin salon.

L'établissement possède un bar à l'ambiance détendue et un restaurant international doté d'une terrasse. Il comprend également un jardin et une piscine extérieure. Un petit-déjeuner buffet payant est proposé et un parking est à disposition.


" FontSize="14" TextColor="Black" />

                </VerticalStackLayout>

                <!-- Plats recommandés -->
                <Label Text="Avis"
                       FontSize="14"
                       TextColor="Black"
                       FontAttributes="Bold"
                       Padding="5,10" />



                <VerticalStackLayout Spacing="5" Padding="5,10">

                    <Label Text="📶 Wi-Fi gratuit" FontSize="14" TextColor="Black" />
                    <Label Text="🥐 Petit-déjeuner inclus" FontSize="14" TextColor="Black" />
                    <Label Text="🅿️ Parking gratuit" FontSize="14" TextColor="Black" />
                    <Label Text="♿ Accès handicapés" FontSize="14" TextColor="Black" />
                    <Label Text="🏊‍♂️ Pisc. intérieure et extérieure" FontSize="14" TextColor="Black" />
                    <Label Text="❄️ Climatisation" FontSize="14" TextColor="Black" />

                </VerticalStackLayout>




                <Frame CornerRadius="20"
Padding="0"
HasShadow="True"
BorderColor="#ddd"
BackgroundColor="White"
Margin="20,10"
HorizontalOptions="Center">
                    <ImageButton Source="localibis.jpg"
          Aspect="AspectFill"
          HeightRequest="220"
          WidthRequest="360"
          BackgroundColor="Transparent"
          CornerRadius="20"
          Clicked="OpenGoogleMaps" />
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Barre de navigation fixe en bas -->
        <Frame Grid.Row="1"
CornerRadius="25"
Padding="0"
HeightRequest="70"
HasShadow="True"
Margin="10">
            <Grid ColumnDefinitions="*,*,*,*,*">
                <ImageButton Source="home.png" Grid.Column="0" WidthRequest="30" HeightRequest="30" HorizontalOptions="End" VerticalOptions="Center" Clicked="home" />

                <Frame Grid.Column="2" WidthRequest="60" HeightRequest="60" CornerRadius="30" VerticalOptions="Center" HorizontalOptions="Center" HasShadow="True">
                    <ImageButton Source="compass.png" Grid.Column="3" WidthRequest="30" HeightRequest="30" HorizontalOptions="Center" VerticalOptions="Center" Clicked="OnCompassClicked" />
                </Frame>

                <ImageButton Source="profile_user.png" Grid.Column="4" WidthRequest="30" HeightRequest="30" HorizontalOptions="Start" VerticalOptions="Center" Clicked="profil"/>
            </Grid>
        </Frame>

    </Grid>
</ContentPage>
