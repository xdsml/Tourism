<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="menu.Lunaria"
             Title="Lunaria : Restaurant, Coffee Club"
             BackgroundColor="#f5f5f5">

    <Grid RowDefinitions="*, Auto">
        <AbsoluteLayout>
            <!-- Image de fond pleine écran -->
            <Image Source="jam3.jpg"
                   Aspect="AspectFill"
                   AbsoluteLayout.LayoutBounds="0,0,1,1"
                   AbsoluteLayout.LayoutFlags="All"/>

            <!-- Overlay sombre -->
            <BoxView BackgroundColor="Black"
                     Opacity="0.4"
                     AbsoluteLayout.LayoutBounds="0,0,1,1"
                     AbsoluteLayout.LayoutFlags="All"/>

            <!-- Contenu Overlay (vide ici) -->
            <Grid AbsoluteLayout.LayoutBounds="0,0,1,1"
                  AbsoluteLayout.LayoutFlags="All">
                <!-- Contenu additionnel possible -->
            </Grid>
        </AbsoluteLayout>

        <!-- Contenu principal défilable -->
        <ScrollView Grid.Row="0" Orientation="Vertical">
            <Frame Margin="10" Padding="0" CornerRadius="20" HasShadow="True" BackgroundColor="White">
                <VerticalStackLayout Padding="10">
                    <!-- Slider d'images avec coins arrondis -->
                    <Grid>
                        <CarouselView ItemsSource="{Binding Images}" HeightRequest="200" IndicatorView="carouselIndicators">
                            <CarouselView.ItemTemplate>
                                <DataTemplate>
                                    <Frame CornerRadius="15" HasShadow="True" Padding="0" Margin="5">
                                        <Image Source="{Binding}" Aspect="AspectFill"/>
                                    </Frame>
                                </DataTemplate>
                            </CarouselView.ItemTemplate>
                        </CarouselView>

                        <!-- Indicateurs -->
                        <IndicatorView x:Name="carouselIndicators"
                                   IndicatorColor="LightGray"
                                   SelectedIndicatorColor="DarkBlue"
                                   HorizontalOptions="Center"
                                   Margin="0,5"/>
                    </Grid>

                    <!-- Description de l’hôtel -->
                    <Label Text="Lunaria : Restaurant, Coffee Club"
                       FontSize="22"
                       TextColor="#2c3e50"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>

                    <Label Text="Services disponibles: Dispose d'une terrasse · Propose un menu enfant"
                       FontSize="16"
                       TextColor="#555"
                       Padding="5"
                       LineHeight="1.5"/>

                    <!-- Étoiles -->
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label Text="3,9" FontSize="14" TextColor="#333"/>

                        <Label Text="★" TextColor="Gold" FontSize="20"/>
                        <Label Text="★" TextColor="Gold" FontSize="20"/>
                        <Label Text="★" TextColor="Gold" FontSize="20"/>
                        <Label Text="★" TextColor="Gold" FontSize="20"/>
                        <Label Text="★" TextColor="LightGray" FontSize="20"/>
                    </HorizontalStackLayout>

                    <!-- Localisation -->
                    <VerticalStackLayout Spacing="5">

                        <Label Text="Adresse : Rue Miraj, Oujda 60000"
           FontSize="16"
           TextColor="#444"/>

                        <Label Text="Horaires :" 
           FontSize="16"
           TextColor="#444"
           FontAttributes="Bold"/>

                        <Label Text="Mardi : 08:00–23:00
Mercredi : 08:00–23:00
Jeudi (Fête du travail) : 08:00–23:00
(Vérifiez les horaires pendant les jours fériés)
Vendredi : 08:00–23:00
Samedi : 08:00–23:00
Dimanche : 08:00–23:00
Lundi : 08:00–23:00"
           FontSize="16"
           TextColor="#007bff"
           FontAttributes="Bold"/>

                        <Label Text="Téléphone : 05365-38691"
           FontSize="16"
           TextColor="#444"/>

                        <Label Text="Au coeur du célèbre quartier Al Qods, nous vous accueillons dans le nouveau concept LUNARIA, un restaurant bistronomique qui allie modernité, qualité de service, qualité de produit et cuisine créative. Nous vous invitons à découvrir notre menu riche et varié, le tout dans une ambiance chaleureuse et cosy. Faites-vous plaisir !"
           FontSize="16"
           TextColor="#444"
           LineBreakMode="WordWrap"/>

                    </VerticalStackLayout>


                    <!-- Détails -->
                    <VerticalStackLayout Spacing="4" Padding="10">
                        <Label Text="🍽️ Service : Repas sur place" FontSize="14" TextColor="#333"/>
                        <Label Text="⏰ Type : Déjeuner" FontSize="14" TextColor="#333"/>
                        <Label Text="💸 Prix : 50–100 MAD" FontSize="14" TextColor="#333"/>
                        <Label Text="👨‍🍳 Cuisine : 5" FontSize="14" TextColor="#333"/>
                        <Label Text="🧑‍🤝‍🧑 Service : 5" FontSize="14" TextColor="#333"/>
                        <Label Text="🎉 Ambiance : 5" FontSize="14" TextColor="#333"/>
                    </VerticalStackLayout>

                    <!-- Like -->
                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Label Text="👍 J’aime" FontSize="14" TextColor="#333" FontAttributes="Bold"/>
                        <ImageButton Source="like.png" HeightRequest="40" WidthRequest="40" BackgroundColor="Transparent"/>
                    </HorizontalStackLayout>

                    <!-- Image carte -->
                    <Frame CornerRadius="20"
Padding="0"
HasShadow="True"
BorderColor="#ddd"
BackgroundColor="White"
Margin="20,10"
HorizontalOptions="Center">
                        <ImageButton Source="locallunaria.png"
          Aspect="AspectFill"
          HeightRequest="220"
          WidthRequest="360"
          BackgroundColor="Transparent"
          CornerRadius="20"
          Clicked="OpenGoogleMaps" />
                    </Frame>


                </VerticalStackLayout>
            </Frame>
        </ScrollView>

        <!-- Barre de navigation -->
        <Frame Grid.Row="1"
CornerRadius="25"
Padding="0"
HeightRequest="70"
HasShadow="True"
Margin="10">
            <Grid ColumnDefinitions="*,*,*,*,*">
                <ImageButton Source="home.png" Grid.Column="0" WidthRequest="30" HeightRequest="30" HorizontalOptions="End" VerticalOptions="Center" Clicked="home" />

                <Frame Grid.Column="2" WidthRequest="60" HeightRequest="60" CornerRadius="30" VerticalOptions="Center" HorizontalOptions="Center" HasShadow="True">
                    <ImageButton Source="compass.png" Grid.Column="3" WidthRequest="30" HeightRequest="30" HorizontalOptions="Center" VerticalOptions="Center" Clicked="OnCompassClicked" />
                </Frame>

                <ImageButton Source="profile_user.png" Grid.Column="4" WidthRequest="30" HeightRequest="30" HorizontalOptions="Start" VerticalOptions="Center" Clicked="profil"/>
            </Grid>
        </Frame>
    </Grid>
</ContentPage>
